---
import { SignedOut, SignInButton } from "@clerk/astro/components";
---

<SignedOut>
  <p class="text-lg text-center text-gray-200 mb-6">
    Please, get started with OAuth2 by clicking the button below.
  </p>

  <SignInButton
    mode="modal"
    class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-800 ease-in-out duration-300"
  >
    Sign In
  </SignInButton>
</SignedOut>
